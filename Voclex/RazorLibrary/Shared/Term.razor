@using RazorLibrary.Shared.LearningModules
<h1>@CurrentTerm</h1>

@foreach (var learningModule in learningModules)
{
	<DynamicComponent Type="learningModule" Parameters="LearningModuleParameters"></DynamicComponent>
}

@code {
	private readonly Type[] learningModules = new[] { typeof(Definition), typeof(Examples), typeof(Pictures) };

	[Parameter]
	public string CurrentTerm { get; set; }

	[Parameter]
	public IDictionary<string, object> LearningModuleParameters { get; set; }

}
