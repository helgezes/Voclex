@page "/learn-new-terms"
@using RazorLibrary.Shared
@using SharedLibrary.Queries.Terms
@inherits TermsPage

<PageTitle>Learn New Terms</PageTitle>

<div class="container mt-4">
	@if (CurrentTerm != null)
	{
		<div>
			<Term CurrentTerm="@CurrentTerm.Value" LearningModuleParameters="GetLearningModuleParameters()"></Term>

			<p class="py-3">
				<button @onclick="AlreadyKnowThis" type="button" class="btn btn-outline-primary btn-lg">I already know this</button>
				<button @onclick="IncorrectGuess" type="button" class="btn btn-outline-primary btn-lg">I want to learn it</button>
			</p>
		</div>
	}
	else
	{
		<div>
			<p>There are no more words to display!</p>
		</div>
	}
</div>

@code {
	protected override TermsListEnumQueryVariants QueryVariant => TermsListEnumQueryVariants.GetOnlyNew;
}

